{
  "name": "edea",
  "image": "registry.gitlab.com/edea-dev/ci-runner:latest",
  "features": {
    "ghcr.io/devcontainers-contrib/features/zsh-plugins:0": {},
    "ghcr.io/devcontainers/features/nix:1": {},
    "ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
      "packages": "git-delta,neovim,locales,graphviz"
    }
  },
  "forwardPorts": [8000],
  "postCreateCommand": "locale-gen en_US.UTF-8 && git config --global --add safe.directory /workspaces/edea && poetry install",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.black-formatter",
        "ms-vscode.live-server",
        "tamasfe.even-better-toml",
        "chrischinchilla.vale-vscode"
      ]
    }
  },
  "remoteUser": "root"
}
